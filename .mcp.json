{
  "mcpServers": {
    "taskmaster-ai": {
      "command": "npx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"],
      "env": {
        "OPENAI_API_KEY": "OPENAI_API_KEY"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "--package=@playwright/mcp", "@playwright/mcp"]
    }
  }
}
