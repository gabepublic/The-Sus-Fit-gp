# The Sus Fit - Environment Variables Example
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================
# OPTION: OPENAI, GOOGLE
VISION_PROVIDER=GOOGLE

# OpenAI API Configuration
OPENAI_API_KEY=<replace_with_real_api_key>
OPENAI_VISION_MODEL="gpt-image-1"
#OPENAI_VISION_MODEL="mock"

# Google Vision API
GOOGLE_GEMINI_API_KEY=<replace_with_real_api_key>
GOOGLE_GEMINI_VISION_MODEL=gemini-2.5-flash-image-preview
#GOOGLE_GEMINI_VISION_MODEL=mock

# Rate Limiter
DAILY_LIMIT=100

# =============================================================================
# OPTIONAL ENVIRONMENT VARIABLES
# =============================================================================

# Node environment (optional)
# Values: development, production, test
# Default: development
NODE_ENV=development

# CI environment flag (optional)
# Set to true in CI environments for test configuration
# Default: false
CI=false

# Base URL for the application (optional)
# Used for CORS and absolute URL generation
# Example: https://your-app.vercel.app
NEXT_PUBLIC_BASE_URL=

# App URL for development (optional)
# Used for development server configuration
# Default: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000 
